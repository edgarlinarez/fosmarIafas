<div class="">
    <div class="row">
        <div class="col-lg-6 6 pt-2">
            <h5>Copago</h5>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <div class="col-lg-7 offset-md-5 text-right">
                    <button id="btnNuCopago" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#mdlCopago">
                        <i class="fa fa-plus mr-1"></i>Nuevo Copago
                    </button>
                </div>
            </div>
        </div>
    </div>
    <hr class="dropdown-divider bg-warning mt-1 mb-3">
    <div class="form-row">
        <table id="dtCopago" class="table table-striped table-bordered"></table>
    </div>
    <div class="col form-group px-1">&nbsp;</div>
    <hr class="dropdown-divider bg-warning mt-1 mb-3">
    <div class="">
        <div class="form-row">
            <div class="col-lg-6 6 pt-2">
                <h5>Red de Proveedor</h5>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-7 offset-md-5 text-right">
                        <button id="btnNuProveedor" class="btn btn-primary btn-xs d-none">Agregar</button>
                    </div>
                </div>
            </div>
        </div>
        <hr class="dropdown-divider bg-warning mt-1 mb-3">
        <div class="form-row">
            <table id="dtRedProveedor" class="table table-striped table-bordered"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlCopago" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titleCopago">Nuevo</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmCopago" autocomplete="off">
                    <div class="container">
                        <div class="form-row form-group">
                            <div class="col-lg-4">
                                <span>Código</span>
                                <input type="text" id="txtCodigoCopago" class="form-control form-control-sm text-right disabled" readonly="readonly" />
                            </div>
                            <div class="col-lg-4">
                                <span>Ind. Deducible</span>
                                <select id="cboDeducible" name="cboDeducible" class="form-control form-control-sm"></select>
                            </div>
                            <div class="col-lg-4">
                                <span>Parentesco</span>
                                <select id="cboParentescoCopago" name="cboDeducible" class="form-control form-control-sm"></select>
                            </div>
                        </div>

                        <div class="form-row form-group">
                                <div class="col-lg-6">
                                    <span>Deducible General</span>
                                </div>
                        </div>
                        <div class="form-row form-group">
                                <div class="col-lg-4">
                                    <select id="cboSolesDolaresDG" name="cboSolesDolaresDG" class="form-control form-control-sm"></select>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text px-2">S/.</span>
                                        </div>
                                        <input type="number" id="txtSolesMontoDG" name="txtSolesMontoDG" class="form-control form-control-sm text-right pr-1 numeroDecimal" min="0" max="9999999" step="0.01" required maxlength="7" placeholder="0.00">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text px-2">$</span>
                                        </div>
                                        <input type="number" id="txtDolaresMontoDG" name="txtDolaresMontoDG" class="form-control form-control-sm text-right pr-1 numeroDecimal" min="0" max="9999999" step="0.01" required maxlength="7" placeholder="0.00">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-lg-6">
                                    <span>Deducible Especial</span>
                                </div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-lg-4">
                                    <select id="cboSolesDolaresDE" name="cboSolesDolaresDE" class="form-control form-control-sm text-right"></select>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text px-2">S/.</span>
                                        </div>
                                        <input type="number" id="txtSolesMontoDE" name="txtSolesMontoDE" class="form-control form-control-sm text-right pr-1 numeroDecimal" min="0" max="9999999" step="0.01" required maxlength="7" placeholder="0.00">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group input-group-sm">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text px-2">$</span>
                                        </div>
                                        <input type="number" id="txtDolaresMontoDE" name="txtDolaresMontoDE" class="form-control form-control-sm text-right pr-1 numeroDecimal" min="0" max="9999999" step="0.01" required maxlength="7" placeholder="0.00">
                                    </div>
                                </div>
                            </div>
                            <div class="form-row form-group">
                                <div class="col-lg-3">
                                    <span>Cobertura</span>
                                    <div class="input-group input-group-sm">
                                        <input type="number" id="txtPorcentajeCobertura" name="txtPorcentajeCobertura" class="form-control form-control-sm text-right px-2" step="1" min="0" max="100">
                                        <div class="input-group-append">
                                            <span class="input-group-text px-2">%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <partial name="/Views/Shared/Partials/_AuditoriaPartial.cshtml" />
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-xs" data-dismiss="modal">Cerrar</button>
                <button id="btnGuCopago" type="button" class="btn btn-primary btn-xs">Guardar</button>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="hfactionCopago" />
<input type="hidden" id="hfIDCopago" />