<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="titleSeccion">Nueva Sección</h5>
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmSeccion" autocomplete="off">
                <div class="container">
                    <div class="form-row form-group">
                        <div class="col-lg-6">
                            <span>Código</span>
                            <input type="hidden" id="hfCodSeccion" />
                            <input type="number" id="txtCodSeccion" name="txtCodSeccion" class="form-control form-control-sm text-left pr-1"  min="0" required maxlength="3" placeholder="0.0" />
                        </div>
                        <div class="col-lg-3 d-none">
                            <span>ID</span>
                            <input type="hidden" id="hfIdSeccion" />
                            <input type="text" id="txtIDSeccion" name="txtIDSeccion" class="form-control form-control-sm" readonly />
                        </div>
                        <div class="col-lg-3 d-none">
                            <span>idgrpsrvco</span>
                            <input type="text" id="txtIDgrpsrvco" name="txtIDgrpsrvco" class="form-control form-control-sm" readonly />
                        </div>
                    </div>
                    <div class="form-row form-group">
                        <div class="col-12">
                            <span>Descripción</span>
                            <input type="text" id="txtDescripcionSeccion" name="txtDescripcionSeccion" class="form-control form-control-sm text-uppercase alfaNumCharEsp" placeholder="DESCRIPCIÓN" />
                        </div>
                    </div>
                    <div class="form-row form-group">
                        <div class="col-12">
                            <span>Abreviatura</span>
                            <input type="text" id="txtAbreviaturaSeccion" name="txtAbreviaturaSeccion" class="form-control form-control-sm text-uppercase alfaNumCharEsp" placeholder="ABREVIATURA" />
                        </div>
                    </div>
                    <partial name="/Views/Shared/Partials/_AuditoriaPartial.cshtml" />
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-xs" data-dismiss="modal">Cerrar</button>
            <button id="btnGrSeccion" type="button" class="btn btn-primary btn-xs">Guardar</button>
        </div>
    </div>
</div>
