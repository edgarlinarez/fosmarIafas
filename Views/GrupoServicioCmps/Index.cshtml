
@{
    ViewData["Title"] = "Listado CPMS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-tabs" id="tabGServicioCmps" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="Lista-tab" href="#listar" data-toggle="tab" role="tab">Servicio</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="Datos-tab" href="#Datos" data-toggle="tab" role="tab">Sección</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="Configuracion-tab" href="#Configuracion" data-toggle="tab" role="tab">Sub-Sección</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="Configuracion2-tab" href="#Configuracion2" data-toggle="tab" role="tab">CPMS</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active mt-3" id="listar" role="tabpanel">
        <partial name="Partials/_ListaGServicioCmps" />
    </div>
    <div class="tab-pane fade mt-3" id="Datos" role="tabpanel">
        <partial name="Partials/_AgregarSeccionCmps" />
    </div>
    <div class="tab-pane fade mt-3" id="Configuracion" role="tabpanel">
        <partial name="Partials/_AgregarSubSeccionCpms" />
    </div>
    <div class="tab-pane fade mt-3" id="Configuracion2" role="tabpanel">
        @*<partial name="Partials/_AgregarCpms" />*@
        <div class="container">
            <ul class="nav nav-pills" id="tabCpms">
                <li class="nav-item">
                    <a class="nav-link active py-1 px-3 mr-1" id="listaCpms-tab" href="#listaCpms" data-toggle="tab" role="tab">Listar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link py-1 px-3 mr-1" id="Cpms-tab" href="#Cpms" data-toggle="tab" role="tab">Agregar</a>
                </li>
            </ul>
            <hr class="dropdown-divider mb-2">
            <div class="tab-content" id="cpms-tabContent">
                <div class="tab-pane fade show active" id="listaCpms" role="tabpanel">
                    <form id="frmCpmsDet" autocomplete="off">
                        <div class="">
                            <div class="form-row">
                                <div class="col-4 pl-0">
                                    <button type="button" class="btn btn-primary btn-xs btn-nuevo" id="btnNuevoCpms"> <i class="fa fa-plus mr-1 font-weight-bold"></i>Nuevo CPMS</button>
                                </div>
                            </div>
                            <div class="form-row">
                                <table id="dtCpms" class="table table-striped table-bordered"></table>
                            </div>
                        </div>
                    </form>
                </div>                  
                <div class="tab-pane fade show" id="Cpms" role="tabpanel">
                    <partial name="Partials/_NuevoCpms" />
                </div>
               
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlGServCmps" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <partial name="Partials/_NuevoGServCmps" />
</div>
<div class="modal fade" id="mdlSeccionCmps" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <partial name="Partials/_NuevaSeccion" />
</div>
<div class="modal fade" id="mdlSubSeccion" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <partial name="Partials/_NuevaSubSeccion" />
</div>

<input type="hidden" id="hfactionGSCmps" />
<input type="hidden" id="hfactionSeccion" />
<input type="hidden" id="hfactionSubSeccion" />
<input type="hidden" id="hfactionCpms" />
@*buscar*@
<input type="hidden" id="hfactionGRServicio" />


@*<partial name="Partials/_ModalGrpServicio" />*@

@section Scripts{
    <script asp-append-version="true" src="~/js/views/GrupoServicioCmps/index.js"></script>
}