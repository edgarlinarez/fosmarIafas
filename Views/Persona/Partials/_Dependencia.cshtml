<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 ">
            <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#mdlDependencia" id="btnNuevaDependencia">
                <i class="la la-plus mr-1"></i>Nuevo
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table id="dtDependencias" class="table table-striped table-bordered"></table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="mdlDependencia" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="mdlDependenciaLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="mdlDependenciaLabel">Agregar Personas</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmDependencia">
                    <div class="form-group d-flex">
                        <div class="col-6">
                            <span>Código</span>
                            <input type="text" id="txtIDPersonaDep" class="form-control form-control-sm disabled solonumeros" maxlength="15" readonly="readonly"/>
                        </div>
                        <div class="col-6">
                        </div>
                    </div>
                    <div class="form-group d-flex">
                        <div class="col-12">
                            <span>
                                Nombres y Apellidos
                            </span>
                            <select id="cboPersonasDep" class="js-data-example-ajax form-control form-control-sm"></select>
                        </div>
                    </div>
                    <partial name="/Views/Shared/Partials/_AuditoriaPartial.cshtml" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-xs" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btnGuardarDependencia" class="btn btn-primary btn-xs">Guardar</button>
            </div>
        </div>
    </div>
</div>
