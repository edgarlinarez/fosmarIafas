<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="offset-10 col-lg-2 col-md-2 col-sm-4">
                    <button id="btnNuevoPersona" type="button" class="btn btn-primary btn-xs w-100"><i class="la la-plus mr-1 font-weight-bold"></i>Nueva Persona</button>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-lg-2 col-md-2 col-sm-4">
                    <span>Tipo Documento</span>
                    <select id="cboTipoDocumento" name="cboTipoDocumento" class="form-control form-control-sm "></select>
                </div>
                <div class="form-group col-lg-2 col-md-2 col-sm-4">
                    <span>Nro. Documento</span>
                    <input id="txtDocumento" class="form-control form-control-sm solonumeros text-uppercase" type="text">
                </div>
                <div class="form-group col-lg-2 col-md-2 col-sm-4">
                    <span>Estado</span>
                    <select class="form-control form-control-sm select-estados select-estado-listado" id="cboEstado" name="cboEstado" required=""></select>
                </div>
                <div class="form-group col-lg-4 col-md-4 col-sm-8">
                    <span>Nombre y Apellido / Razón</span>
                    <input id="txtNombreRazon" class="form-control form-control-sm text-uppercase alfaNumCharEsp" type="text">
                </div>
                <div class="col-lg-2 col-md-2 col-sm-4">
                    <span class="d-block">&nbsp;</span>
                    <button type="button" class="btn btn-primary btn-xs w-100" id="btnBuscarPersona"><i class="fa fa-search mr-1"></i>Buscar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table id="tabla_persona" class="table table-striped table-bordered w-100"></table>
        </div>
    </div>
</div>
