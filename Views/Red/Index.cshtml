
@{
    ViewData["Title"] = "Red Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<partial name="Partials/_ControlesPartial" model="@(ControlesVistas.VistaRed)" />*@

<div class="container">
    <div class="row">
        <div class="col">
            <ul class="nav nav-tabs" id="TabRedes" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="Redes-tab" data-toggle="tab" href="#Redes" role="tab">Redes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Config-tab" data-toggle="tab" href="#ConfigRed" role="tab">Configuración de Red</a>
                </li>
            </ul>
            <div class="tab-content" id="RedesTabContent">
                <div class="tab-pane fade active show" id="Redes" role="tabpanel">
                    <partial name="Partials/_ListarRedes" />
                </div>
                <div class="tab-pane fade" id="ConfigRed" role="tabpanel">
                    <partial name="Partials/_ConfigRed" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="mdlRed" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <partial name="Partials/_NuevoEditRed" />
</div>
<div class="modal fade" id="mdlProvSucursal" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <partial name="Partials/_NuevoEditProvSucursal" />
</div>
<input type="hidden" id="hfactionRed" />
<input type="hidden" id="hfactionCfgRed" />
@section Scripts{
    <script asp-append-version="true" src="~/js/views/Red/Index.js"></script>
}