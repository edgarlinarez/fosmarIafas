@{
    ViewData["Title"] = "Listado SOLICITUD DE SUSCRIPCIÓN";
    //Layout = "~/Views/Shared/_Layout.cshtml";

    ViewData["Breadcrumbs"] = new[] {
        new BreadcrumbViewData{ Name = "Solicitud de Suscripción" }
    };
}
<partial name="Partials/_ControlesPartial" model="@(ControlesVistas.VistaSolicitudSuscripcion)" />
<div class="container">
    <input type="hidden" id="action" name="action" />
    <div class="row align-items-end">
        <div class="col-6">
            @*<button type="button" class="btn btn-primary btn-xs btn-nuevo"><i class="la la-plus"></i>Nuevo</button>*@
            <a asp-controller="solicitudsuscripcion" asp-action="agregar" id="btnNuevo" class="btn btn-primary btn-xs mr-1">
                <i class="la la-plus"></i> Nuevo
            </a>
        </div>
    </div>
    <hr />
    <div class="row align-items-end">
        <div class="col-lg-4">
            <div class="row align-items-end">
                <div class="col-lg-6" style="display:none">
                    <label class="required-form-label">Moneda Origen</label>
                    <select id="filter_gdmorgn" name="filter_gdmorgn" class="form-control form-control-sm" required></select>
                </div>
                <div class="col-lg-12">
                    <label class="required-form-label">Moneda Destino</label>
                    <select id="filter_gdmdstno" name="filter_gdmdstno" class="form-control form-control-sm" required></select>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row align-items-end">
                <div class="col-12 text-center">
                    <label class="required-form-label">Intervalo fechas de proceso </label>
                </div>
                <div class="col-lg-6">
                    <div class="col form-group mb-0 px-0">
                        <div class="input-group">
                            <div class="input-group-append" style="height:31px !important">
                                <span class="input-group-text">Ini.</span>
                            </div>
                            <input type="text" id="filter_inicio" name="filter_inicio" class="form-control form-control-sm formatoFechas" required style="height:31px !important">
                            <div class="input-group-append" style="height:31px !important">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                            <span id="msg0" style="color:red;" class="msg0"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="col form-group mb-0 px-0">
                        <div class="input-group">
                            <div class="input-group-append" style="height:31px !important">
                                <span class="input-group-text">Fin</span>
                            </div>
                            <input type="text" id="filter_fin" style="height:31px !important" name="filter_fin" class="form-control form-control-sm formatoFechas" required>
                            <div class="input-group-append" style="height:31px !important">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                            <span id="msg0" style="color:red;" class="msg0"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2" style="text-align:right">
            <button type="button" class="btn btn-primary btn-xs buscar-tasa" title="Buscar" id="btnBuscar"><span><i class="la la-search"></i> Buscar</span></button>
            @*<button type="button" class="btn btn-primary btn-xs btn-nuevo" data-toggle="modal" data-target="#mdlTasaCambio"><i class="la la-plus"></i>Nuevo</button>*@
        </div>
    </div>
    <hr />
    <div class="row align-items-end">
        <div class="col-12">
            <table id="tabla_TasaCambio" class="table table-striped table-bordered"></table>
        </div>
    </div>
</div>
<partial name="Partials/_ModalTasaCambio" />
@*<partial name="Partials/_ModalListaSerie" />*@

@section Scripts{
    <script asp-append-version="true" src="~/js/views/solicitud-suscripcion/index.js"></script>
}